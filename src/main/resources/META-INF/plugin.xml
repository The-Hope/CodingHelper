<idea-plugin>
    <id>cn.xunyard.coding-helper</id>
    <name>Coding Helper</name>
    <vendor email="xunyard@gmail.com" url="https://blog.xunyard.cn">xunyard</vendor>

    <description><![CDATA[A simple tool for coding help such as building service document for some kinds of facade]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <group id="cn.xunyard.coding.GroupActions" text="Coding Helper" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="first"/>

            <action id="cn.xunyard.doc" class="cn.xunyard.idea.coding.doc.action.ServiceDocBuildingAction" text="Build Service Doc"
                    description="A simple tool for service document building.">
                <add-to-group group-id="ToolsMenu" anchor="first"/>
            </action>
        </group>
    </actions>
</idea-plugin>