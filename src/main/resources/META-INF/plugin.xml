<idea-plugin>
    <id>cn.xunyard.coding-helper</id>
    <name>Coding Helper</name>
    <vendor email="xunyard@gmail.com" url="https://github.com/xunyard">xunyard</vendor>

    <description><![CDATA[A tool for coding help such as service document building]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <group id="cn.xunyard.coding.GroupActions" text="Coding Helper" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="first"/>

            <action id="cn.xunyard.doc" class="cn.xunyard.idea.coding.doc.action.DocumentBuildingAction" text="Build Service Document"
                    description="A simple tool for service document building.">
            </action>
        </group>
    </actions>
</idea-plugin>